{
  "compilerOptions": {
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "incremental": true,

    "noEmitOnError": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,

    "lib": [ "ES2020", "DOM" ],
    "target": "es2020",
    "module": "esnext",
    "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true
  },
  "include": [ "./src/**/*" ]
}
